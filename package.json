{
  "name": "cert-verifier-js",
  "version": "1.0.0",
  "description": "Javascript library for verifying Blockcerts",
  "main": "verifier.js",
  "module": "verifier-es.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register tests/test*.js",
    "build": "npm run build:esm && npm run build:es5",
    "build:esm": "rollup -c",
    "build:es5": "rollup -c rollup-es5.config.js",
    "uglify": "uglifyjs bundle.js --compress --mangle --output verifier.js"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": ["> 1%", "dead"]
          }
        }
      ]
    ]
  },
  "author": "Kim Duffy",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bigi": "^1.4.2",
    "bitcoinjs-lib": "^2.3.0",
    "bs58": "^3.0.0",
    "buffer": "^5.1.0",
    "chai": "^3.5.0",
    "debug": "^3.1.0",
    "ecurve": "^1.0.4",
    "jsonld": "^0.4.11",
    "mocha": "^3.5.3",
    "rollup-plugin-babel": "^3.0.5",
    "sha256": "^0.2.0",
    "tsify": "^3.0.4",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "brfs": "^1.4.3",
    "rollup": "^0.59.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-re": "^1.0.7",
    "uglify-js": "^3.3.14"
  }
}
